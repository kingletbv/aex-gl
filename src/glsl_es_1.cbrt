  if (str == STR_DUPLICATE) {
    dx_error_loc(cc->dx_, &${1}, "Error: duplicate identifier \"%s\" declaration", $1);
    dx_error_loc(cc->dx_, &s->loc_, "See original use of \"%s\"", s->name_);
